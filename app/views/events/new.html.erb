<h1>Crée ton évènement</h1>

<%= form_for @event do |f| %>

  <div class="form-group">
    <%= f.label :start_date, "Date de début" %>
    <%= f.datetime_select :start_date, class: "form-control" %>
  </div>

  <div class="form-group"></div>
    <%= f.label :duration, "Durée (en minutes)" %>
    <%= f.number_field :duration, class: "form-control", placeholder: "Durée de l'événement en minutes", min: 1 %>
  </div>

  <div class="form-group"> 
    <%= f.label :title, "Titre de l'événement" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Entre le titre de votre événement" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control", placeholder: "Décris ton événement en détail" %>
  </div>

  <div class="form-group"></div>
    <%= f.label :price, "Prix" %>
    <%= f.number_field :price, class: "form-control", placeholder: "Prix de l'événement" %>
  </div>

  <div class="form-group">
    <%= f.label :location, "Lieu" %>
    <%= f.text_field :location, class: "form-control", placeholder: "Entrez le lieu de l'événement" %>
  </div>

    <div class="form-group">
      <%= f.submit "Créer mon événement", class: "btn btn-primary" %> 
    </div>

  <% end %>


<% if @event.errors.any? %>
  <div class="alert alert-danger">
    <h2>Nous n'avons pas réussi à créer ton évènement pour la (ou les) raison(s) suivante(s) :</h2>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>





